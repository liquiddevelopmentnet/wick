{
	"compilerOptions": {
		"target": "es2017",
		"module": "CommonJS",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"experimentalDecorators": true,
		"outDir": "./lib",
		"declaration": true,
		"declarationDir": "./lib/types",
		"resolveJsonModule": true
	},
	"include": ["./src/**/*"]
}
